<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.jcabi</groupId>
        <artifactId>parent</artifactId>
        <version>0.7.6</version>
    </parent>
    <groupId>com.rqdql</groupId>
    <artifactId>rqdql</artifactId>
    <version rqdql="yes">2.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>rqdql</name>
    <modules>
        <module>rqdql-core</module>
        <module>rqdql-cli</module>
        <module>rqdql-rest</module>
    </modules>
    <description><![CDATA[
        Requirements Definition and Query Language (RQDQL).
        ]]></description>
    <url>http://www.rqdql.com</url>
    <inceptionYear>2009</inceptionYear>
    <organization>
        <name>RQDQL.com</name>
        <url>http://www.rqdql.com</url>
    </organization>
    <licenses>
        <license>
            <name>BSD</name>
            <url>http://www.rqdql.com/LICENSE.txt</url>
            <distribution>repo</distribution>
            <comments><![CDATA[
                This is free open source project, feel free to redistribute it
                ]]></comments>
        </license>
    </licenses>
    <developers>
        <developer>
            <id>1</id>
            <name>Yegor Bugayenko</name>
            <email>yegor@tpc2.com</email>
            <organization>TPC2.com</organization>
            <organizationUrl>http://www.tpc2.com</organizationUrl>
            <roles>
                <role>Architect</role>
                <role>Developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>
    <mailingLists>
        <mailingList>
            <name>RQDQL Discussions</name>
            <subscribe>rqdql@googlegroups.com</subscribe>
            <unsubscribe>rqdql@googlegroups.com</unsubscribe>
            <post>rqdql@googlegroups.com</post>
            <archive>http://groups.google.com/group/rqdql</archive>
        </mailingList>
    </mailingLists>
    <issueManagement>
        <system>github</system>
        <url>https://github.com/yegor256/rqdql/issues</url>
    </issueManagement>
    <scm>
        <connection>scm:git:github.com:yegor256/rqdql.git</connection>
        <developerConnection>scm:git:github.com:yegor256/rqdql.git</developerConnection>
        <url>https://github.com/yegor256/rqdql</url>
    </scm>
    <ciManagement>
        <system>jenkins</system>
        <url>http://ci.rqdql.com:8080/job/rqdql</url>
    </ciManagement>
    <distributionManagement>
        <site>
            <id>www.rqdql.com</id>
            <name>RQDQL.com Project Site</name>
            <url>s3://www.rqdql.com/</url>
        </site>
    </distributionManagement>
    <properties>
        <rexsl.version>0.4.5</rexsl.version>
    </properties>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <!-- see https://github.com/yegor256/jcabi/issues/113 -->
                <groupId>javax.servlet</groupId>
                <artifactId>servlet-api</artifactId>
                <version>3.0-alpha-1</version>
                <scope>provided</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <RQDQL-Version>${project.version}</RQDQL-Version>
                            <RQDQL-Revision>${buildNumber}</RQDQL-Revision>
                            <RQDQL-Build>${buildNumber}</RQDQL-Build>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <profiles>
        <profile>
            <id>site</id>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <artifactId>maven-site-plugin</artifactId>
                            <configuration>
                                <reportPlugins combine.children="append">
                                    <plugin>
                                        <artifactId>maven-changes-plugin</artifactId>
                                        <configuration>
                                            <tracUser>${trac.user}</tracUser>
                                            <tracPassword>${trac.password}</tracPassword>
                                            <query>component=${project.artifactId}&amp;status=closed&amp;desc=1&amp;order=id</query>
                                            <columnNames>Id, Priority, Summary, Reporter, Resolution</columnNames>
                                        </configuration>
                                        <reportSets>
                                            <reportSet>
                                                <reports>
                                                    <report>trac-report</report>
                                                    <report>changes-report</report>
                                                </reports>
                                            </reportSet>
                                        </reportSets>
                                    </plugin>
                                    <plugin>
                                        <groupId>com.rempl.plugins</groupId>
                                        <artifactId>rempl-maven-plugin</artifactId>
                                        <version>1.1.3</version>
                                        <configuration>
                                            <rom>${basedir}/src/rempl/rom.xml</rom>
                                        </configuration>
                                    </plugin>
                                </reportPlugins>
                            </configuration>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
        <profile>
            <!--
            This PDF generator doesn't work at the moment because
            there is no ability to specify
            "-shell-escape -enable-write18"
            for pdflatex. I already reported this issue to the plugin team:
            @see https://jira.codehaus.org/browse/MLATEX-16 -->
            <id>site-disabled</id>
            <build>
                <plugins>
                    <plugin>
                        <!--
                        Process LaTeX documentation in order to produce PDF
                        @see http://mojo.codehaus.org/latex-maven-plugin
                        -->
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>latex-maven-plugin</artifactId>
                        <version since="9 Dec 2012">1.1</version>
                        <inherited>false</inherited>
                        <configuration>
                            <buildDir>${project.build.directory}/site/pdf</buildDir>
                        </configuration>
                        <executions>
                            <execution>
                                <id>latex-documents</id>
                                <phase>post-site</phase>
                                <goals>
                                    <goal>latex</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
