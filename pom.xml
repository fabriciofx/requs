<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.jcabi</groupId>
        <artifactId>parent</artifactId>
        <version>0.18.1</version>
    </parent>
    <groupId>org.requs</groupId>
    <artifactId>requs</artifactId>
    <version requs="yes">2.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>requs</name>
    <modules>
        <module>requs-reader</module>
        <module>requs-exec</module>
        <module>requs-demo</module>
        <module>requs-maven-plugin</module>
    </modules>
    <description><![CDATA[
        Requirements Definition and Query Language (requs).
        ]]></description>
    <url>http://www.requs.org</url>
    <inceptionYear>2009</inceptionYear>
    <organization>
        <name>requs.org</name>
        <url>http://www.requs.org</url>
    </organization>
    <licenses>
        <license>
            <name>BSD</name>
            <url>http://www.requs.org/LICENSE.txt</url>
            <distribution>repo</distribution>
            <comments><![CDATA[
                This is free open source project, feel free to redistribute it
                ]]></comments>
        </license>
    </licenses>
    <developers>
        <developer>
            <id>1</id>
            <name>Yegor Bugayenko</name>
            <email>yegor@tpc2.com</email>
            <organization>TPC2.com</organization>
            <organizationUrl>http://www.tpc2.com</organizationUrl>
            <roles>
                <role>Architect</role>
                <role>Developer</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>
    <mailingLists>
        <mailingList>
            <name>requs Discussions</name>
            <subscribe>requs@googlegroups.com</subscribe>
            <unsubscribe>requs@googlegroups.com</unsubscribe>
            <post>requs@googlegroups.com</post>
            <archive>http://groups.google.com/group/requs</archive>
        </mailingList>
    </mailingLists>
    <issueManagement>
        <system>github</system>
        <url>https://github.com/yegor256/requs/issues</url>
    </issueManagement>
    <scm>
        <connection>scm:git:github.com:yegor256/requs.git</connection>
        <developerConnection>scm:git:github.com:yegor256/requs.git</developerConnection>
        <url>https://github.com/yegor256/requs</url>
    </scm>
    <ciManagement>
        <system>rultor</system>
        <url>http://www.rultor.com/s/requs</url>
    </ciManagement>
    <distributionManagement>
        <site>
            <id>github</id>
            <url>http://www.requs.org/</url>
        </site>
    </distributionManagement>
    <properties>
        <rexsl.version>0.13.1</rexsl.version>
        <saxon.version>9.1.0.8</saxon.version>
    </properties>
    <build>
        <plugins>
            <plugin>
                <artifactId>maven-jar-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifestEntries>
                            <Requs-Version>${project.version}</Requs-Version>
                            <Requs-Revision>${buildNumber}</Requs-Revision>
                            <Requs-Date>${maven.build.timestamp}</Requs-Date>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
